#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <conio.h>

int par (int n1)
{
    int resultado;
    resultado = n1%2;
    return (resultado);
}

int main()
{
    setlocale(LC_ALL, "");

    int num = 0, num1, resultado;

    do{
    printf("\n*==========MENU==========*\n\n\n\n\n");
    printf("Digite '1' para saber se seu número é par: \n");
    printf("*========================*\n");
    printf("Número para entrar no menu: ");
    scanf("%d", &num);

    switch(num){
    case 0:
        printf("Foi um prazer tê-lo aqui!\n");
        printf("Volte sempre!\n");
        exit(0);
        break;
    case 1:
        printf("Digite um número: ");
        scanf("%d", &num1);
        resultado = par(num1);
        printf("O resto da divisão é: %d", resultado);

        break;
    case 2:

        break;
    case 3:

        break;
    case 4:

        break;
    case 5:

        break;
    case 6:

        break;
    case 7:

        break;
    case 8:

        break;
    case 9:

        break;
    case 10:

        break;

    default:
        printf("Número Inválido\n");
    }
    }while(num != 0);


    system("pause");
    return 0;

}
