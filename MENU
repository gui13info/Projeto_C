#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <conio.h>
#include <math.h>

int par (int n1)
{
    int resultado;
    resultado = n1%2;
    return (resultado);
}

int main()
{
    setlocale(LC_ALL, "");

    int num = 0, num1, resultado, ano;
    //potenciação
    int n2;
    float n1, poten, raiz;
    //nota ponderada
    float not1, not2, not3, media;


    do{
    printf("\n*=========================MENU=========================*\n\n");
    printf("OPÇÕES DO MENU:\n"
           "Digite '0' para sair do MENU\n"
           "Digite '1' para saber se seu número é par.\n"
           "Digite '2' para saber potencia em notação científica.\n"
           "Digite '3' para saber a raiz em notação científica.\n"
           "Digite '4' para saber se o ano é bissexto.\n"
           "Digite '5' para saber sua média ponderada.\n"
           );
    printf("\n*======================================================*\n\n");
    printf("DIGITE A OPÇÃO PARA ENTRAR NO MENU: ");
    scanf("%d", &num);

    switch(num){
    case 0:
        printf("Foi um prazer tê-lo aqui!\n");
        printf("Volte sempre!\n");
        exit(0);
        break;
    case 1:
        printf("\nDigite um número: ");
        scanf("%d", &num1);
        resultado = par(num1);
            if (num1%2==0){
                printf("O resto da divisão é: %d", resultado);
                printf("\nSeu número é par");
            }else{
                printf("O resto da divisão é: %d", resultado);
                printf("\nSeu número não é par");
            }
        break;
    case 2:
        printf("\nDigite o número: ");
        scanf("%f", &n1);
        printf("Digite o expoente: ");
        scanf("%d", &n2);
        poten = pow(n1, n2);
        printf("O resultado em notação científica é %e\n", poten);
        break;
    case 3:
        printf("\nDigite o número: ");
        scanf("%f", &n1);
        printf("Digite o expoente: ");
        scanf("%d", &n2);
        poten = pow(n1, n2);
        raiz = sqrt(poten);
        printf("O resultado é %e\n", raiz);
        break;
    case 4:
        printf("\nDigite o ano: ");
        scanf("%d", &ano);
        ano = ano%4;
        if( ano == 0){
            printf("Esse ano é bissexto\n");
        }else{
            printf("Esse ano não é bissexto\n");
        }
        break;
    case 5:
        printf("Digite sua primeira nota: ");
        scanf("%f", &not1);
        printf("Digite sua segunda nota: ");
        scanf("%f", &not2);
        printf("Digite sua terceira nota: ");
        scanf("%f", &not3);
        media = ((not1*1)+(not2*1)+(not3*2))/4;
        printf("Sua média ponderada é: %.2f", media);
        if (media >= 60.0){
            printf("\nVocê foi aprovado!!");
        }else{
            printf("\nVocê foi reprovado!!");
        }

        break;
    case 6:

        break;
    case 7:

        break;
    case 8:

        break;
    case 9:

        break;
    case 10:

        break;

    default:
        printf("NÚMERO INVÁLIDO!!!\n");
    }
    }while(num != 0);


    system("pause");
    return 0;

}
